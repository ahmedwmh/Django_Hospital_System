# Production Environment Configuration
# Copy this file to .env on your Digital Ocean droplet

# Django Settings
SECRET_KEY=your-very-secure-secret-key-here-change-this
DEBUG=False
ALLOWED_HOSTS=162.159.140.98,localhost,127.0.0.1

# Database Settings (PostgreSQL)
USE_POSTGRESQL=True
DB_NAME=hospital_db
DB_USER=hospital_user
DB_PASSWORD=your-secure-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis Settings
REDIS_URL=redis://localhost:6379/0

# Email Settings (Configure with your email provider)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=('HTTP_X_FORWARDED_PROTO', 'https')
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Sentry Settings (Optional - for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Static and Media Files (for production)
STATIC_ROOT=/var/www/hospital_system/staticfiles
MEDIA_ROOT=/var/www/hospital_system/media
